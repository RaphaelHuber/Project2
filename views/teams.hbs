<div class="containerColumn center flex-wrap"> <!-- teams -->
  <div class="containerColumn teamMargin1 flex-wrap"> <!-- first team -->
    {{#each allTeams}}
      {{> teamCard this }}
    {{/each}}
  </div>

  <br>
  <br>
  
  <form action="/createTeam" method="POST" id="form-container">
    <div class="form-group">
      <label for="newTeam">Create new team:</label>
      <input type="text" class="form-control" id="newTeam" name="newTeam">
    </div>
    <button type="submit" class="btn btnSize1 darkBtn">Create</button>
  </form>
</div>
