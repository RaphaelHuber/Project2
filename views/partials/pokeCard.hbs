<div class="card" style="width: 33.333%;">
      <img class="card-img-top" src="{{this.frontSprite}}" alt="frontSprite">
      <div class="card-body">
        <h5 class="card-title">{{this.name}} @ {{this.item}}</h5>
        <p class="card-text">{{this.nature}} - {{this.ability}}</p>
        <p class="card-text">{{this.evs.HP}}/{{this.evs.Atk}}/{{this.evs.Def}}/{{this.evs.SpAtk}}/{{this.evs.SpDef}}/{{this.evs.Spe}}</p>
        <p class="card-text">{{this.moves.[0]}}</p>
        <p class="card-text">{{this.moves.[1]}}</p>
        <p class="card-text">{{this.moves.[2]}}</p>
        <p class="card-text">{{this.moves.[3]}}</p>
      </div>
</div>