<div class="card cardDesign1">
  <img class="card-img-top pokeListImg" src="{{this.frontSprite}}" alt="frontSprite">
  <div class="card-body">
    <h5 class="card-title">{{this.name}} @ {{this.item}}</h5>
    <p class="">{{this.nature}} - {{this.ability}}</p>
    <p class="">{{this.evs.HP}}/{{this.evs.Atk}}/{{this.evs.Def}}/{{this.evs.SpAtk}}/{{this.evs.SpDef}}/{{this.evs.Spe}}</p>
    <p class="">{{this.moves.[0]}}</p>
    <p class="">{{this.moves.[1]}}</p>
    <p class="">{{this.moves.[2]}}</p>
    <p class="">{{this.moves.[3]}}</p>
    <a class="btn btn-outline-light" onclick="addToTeam('{{this.id}}')">Add</a>
  </div>
</div>